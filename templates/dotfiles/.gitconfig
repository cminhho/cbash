[alias]
	# Quick shortcuts
	co = checkout
	br = branch
	st = status -sb
	ci = commit
	
	# Commit
	ct = commit --verbose
	cta = commit -a --verbose
	amend = commit --verbose --amend
	aamend = !git add -A && git commit --amend
	
	# Undo & Reset
	undo = reset --soft HEAD~1
	unstage = reset HEAD --
	discard = checkout --
	
	# Diff
	df = diff
	dfs = diff --staged
	dfn = diff --name-only
	
	# Log
	lg = log --oneline --graph --decorate -20
	lgp = log --oneline --graph --decorate --pretty=format:\"%C(auto)%d%C(reset) %s %C(magenta)(%ar)%C(reset) %C(cyan)%h%C(reset) %C(red)[%cn]%C(reset)\"
	last = log -1 HEAD --stat
	
	# Branch
	branches = branch -a --sort=-committerdate
	cleanup = !git branch --merged | grep -v '\\*\\|main\\|master' | xargs -n 1 git branch -d
	
	# Utility
	aliases = config --get-regexp alias
	whoami = !git config user.name && git config user.email

[core]
	excludesfile = ~/.gitignore_global
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
[push]
	default = current
[user]
	name = YOUR_NAME
	email = YOUR_EMAIL@example.com 
[pull]
	rebase = true
[fetch]
	prune = true
[diff]
	colorMoved = zebra
[credential]
	helper = osxkeychain
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true
